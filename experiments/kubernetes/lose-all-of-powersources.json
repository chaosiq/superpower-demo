{
    "version": "1.0.0",
    "title": "Users should keep their superpower when powersource loses 100% of its fleet",
    "description": "The powersource service is called by the superpower frontend to fetch character's info. What happens when all its instances go down?",
    "tags": [
        "kubernetes", "superpower", "powersource"
    ],
    "configuration": {
        "service_url": {
            "type": "env",
            "key": "SUPERPOWER_URL"
        }
    },
    "contributions": {
        "availability": "high",
        "reliability": "high",
        "safety": "medium",
        "security": "none",
        "performability": "none"
    },
    "steady-state-hypothesis": {
        "title": "Super powers must not change",
        "probes": [
            {
                "type": "probe",
                "name": "users-must-receive-superpower",
                "tolerance": 200,
                "provider": {
                    "type": "python",
                    "module": "chaospower.probes",
                    "func": "ask_for_superpower",
                    "arguments": {
                        "service_url": "${service_url}"
                    }
                }
            },
            {
                "type": "probe",
                "name": "users-must-have-kept-their-superpower",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "chaospower.probes",
                    "func": "has_kept_superpower"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "terminate-pods",
            "provider": {
                "module": "chaosk8s.pod.actions",
                "type": "python",
                "func": "terminate_pods",
                "arguments": {
                    "label_selector": "app=powersource-app",
                    "qty": 2,
                    "ns": "mucon"
                }
            },
            "pauses": {
                "after": 5
            }
        },
        {
            "type": "probe",
            "name": "fetch-another-hero",
            "provider": {
                "type": "http",
                "timeout": [5, 2],
                "url": "${service_url}"
            }
        },
        {
            "type": "probe",
            "name": "fetch-superpower-logs",
            "provider": {
                "type": "python",
                "module": "chaosk8s.pod.probes",
                "func": "read_pod_logs",
                "arguments": {
                    "label_selector": "app=superpower-app",
                    "last": "20s",
                    "ns": "mucon",
                    "container_name": "superpower-app"
                }
            }
        }
    ]
}
